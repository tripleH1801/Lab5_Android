<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgGrid"
        android:layout_width="201dp"
        android:layout_height="131dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dauchuyendoipsps2_1" />

    <TextView
        android:id="@+id/tvNameGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Cáp chuyển từ Cổng  USB sang PS2..."
        android:textColor="#070404"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imgGrid"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgGrid"
        app:layout_constraintTop_toBottomOf="@+id/imgGrid" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNameGrid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvNameGrid"
        app:layout_constraintTop_toBottomOf="@+id/tvNameGrid"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/tvVoteGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="(15)"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/tvNameGrid"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvPriceGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="69.900 đ"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvDiscountGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="-39%"
        android:textColor="#c4c4c4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceGrid"
        app:layout_constraintEnd_toEndOf="@+id/tvVoteGrid"
        app:layout_constraintStart_toEndOf="@+id/tvPriceGrid"
        app:layout_constraintTop_toTopOf="@+id/tvPriceGrid" />
</androidx.constraintlayout.widget.ConstraintLayout>